let
    InvertNameWithComma  = (string as text) as text =>
        // takes a string as inptut in the format : Lainesse, Gabriel
        // and returns an inverted name like: Gabriel Lainesse
        let
            BeforeComma = Text.Trim(Text.BeforeDelimiter(string, ",")),
            AfterComma = Text.Trim(Text.AfterDelimiter(string, ",")),
            FinalText = Text.Combine({AfterComma, " ", BeforeComma})
        in
            FinalText
in
    InvertNameWithComma
